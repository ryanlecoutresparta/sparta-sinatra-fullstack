<form action="/sports" method="POST">
  <div class="form-group">
    <label for="form-group">Sport Name</label>
    <input type="text" class="form-control" placeholder="Sport Name" name="sport_name">
  </div>
  <div class="form-group">
    <label for="yearCreated">Invented</label>
    <input type="text" class="form-control" placeholder="Invented" name="invented">
  </div>
  <div class="form-group">
    <label for="color">Team Size</label>
    <input type="text" class="form-control" placeholder="Team Size" name="team_size">
  </div>

  <button type="submit" class="btn btn-default">Submit Your Sport!</button>
